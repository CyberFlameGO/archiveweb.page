{
  "name": "Webrecorder",
  "description": "Webrecorder",
  "version": "0.3.3",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "debugger",
    "contextMenus",
    "tabs",
    "activeTab",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "replay/bg.js"
    ],
    "persistent": false
  },
  "icons": {
    "32": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "icon.png"
    },
    "default_title": "Webrecorder",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "pdf.min.js",
    "pdf.worker.min.js",
    "./**"
  ],
  "manifest_version": 2
}
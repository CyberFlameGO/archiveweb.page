{
  "name": "Webrecorder",
  "description": "Webrecorder",
  "version": "$VERSION",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["debugger", "contextMenus", "tabs", "activeTab", "unlimitedStorage", "<all_urls>"],
  "background": { 
    "scripts": ["replay/bg.js"],
    "persistent": false
  },
  "icons": {
    "32": "$ICON",
    "128": "$ICON"
  },
  "browser_action": {
    "default_icon": {
      "32": "$ICON"
    },
    "default_title": "Webrecorder",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "pdf.min.js",
    "pdf.worker.min.js",
    "replay/*"
  ],
  "manifest_version": 2
}
